<% include ../partials/header %>
<% if (error && error.length > 0) { %>
<div class="alert alert-danger alert-dismissible" role="alert">
  <%=error%>
</div>
<% } %> <% if (success && success.length > 0) { %>
<div class="alert alert-success alert-dismissible" role="alert">
  <%=success%>
</div>
<% } %>

<div class="nk-content nk-content-lg nk-content-fluid">
  <div class="container-xl wide-lg">
    <div class="nk-content-inner">
      <div class="nk-content-body">
        <div class="nk-block-head nk-block-head-lg">
          <div class="nk-block-head-content">
            <div class="nk-block-head-sub"><a href="/plan" class="back-to"><em
                  class="icon ni ni-arrow-left"></em><span>Back to plan</span></a></div>
            <div class="nk-block-head-content">
              <h2 class="nk-block-title fw-normal">Ready to get started?</h2>
            </div>
          </div>
        </div><!-- nk-block-head -->
        <div class="nk-block invest-block">
          <form action="/invest/<%=userId%>" class="invest-form" method="POST">
            <div class="row g-gs">
              <div class="col-lg-7">
                <div class="invest-field form-group">
                  <input type="hidden" value="<%=plan.name%>" name="plan" id="invest-choose-plan">
                  <div class="dropdown invest-cc-dropdown">
                    <a href="#" class="invest-cc-choosen dropdown-indicator" data-toggle="dropdown">
                      <div class="coin-item">
                        <div class="coin-icon">
                          <em class="icon ni ni-offer-fill"></em>
                        </div>
                        <div class="coin-info">
                          <span class="coin-name"><%=plan.name%></span>
                          <span class="coin-text"><%=plan.tag%></span>
                        </div>
                      </div>
                    </a>
                    <div class="dropdown-menu dropdown-menu-auto dropdown-menu-mxh">
                      <ul class="invest-cc-list">
                        <li class="invest-cc-item selected">
                          <a href="admin/invest/<%=userId%>?starter=on" class="invest-cc-opt" data-plan="starter">
                            <div class="coin-item">
                              <div class="coin-icon">
                                <em class="icon ni ni-offer-fill"></em>
                              </div>
                              <div class="coin-info">
                                <span class="coin-name">Starter Plan</span>
                                <span class="coin-text">Invest for 3 months and get 15% monthly profit</span>
                              </div>
                            </div>
                          </a>
                        </li>
                        <li class="invest-cc-item selected">
                          <a href="admin/invest/<%=userId%>?silver=on" class="invest-cc-opt" data-plan="silver">
                            <div class="coin-item">
                              <div class="coin-icon">
                                <em class="icon ni ni-offer-fill"></em>
                              </div>
                              <div class="coin-info">
                                <span class="coin-name">Silver Plan</span>
                                <span class="coin-text">Invest for 6 months and get 20% monthly profit </span>
                              </div>
                            </div>
                          </a>
                        </li>
                        <li class="invest-cc-item">
                          <a href="admin/invest/<%=userId%>?diamond=on" class="invest-cc-opt" data-plan="diamond">
                            <div class="coin-item">
                              <div class="coin-icon">
                                <em class="icon ni ni-offer-fill"></em>
                              </div>
                              <div class="coin-info">
                                <span class="coin-name">Diamond Plan</span>
                                <span class="coin-text">Invest for 1 year and get 30% monthly profit</span>
                              </div>
                            </div>
                          </a>
                        </li>
                      </ul>
                    </div>
                  </div><!-- .dropdown -->
                </div><!-- .invest-field -->
                <div class="invest-field form-group">
                  <div class="form-label-group">
                    <label class="form-label">Choose Quick Amount to Invest</label>
                  </div>
                  <div class="invest-amount-group g-2">
                    <div class="invest-amount-item">
                      <input type="radio" class="invest-amount-control" value="500" name="amount" id="iv-amount-1">
                      <label class="invest-amount-label" for="iv-amount-1">$ 500</label>
                    </div>
                    <div class="invest-amount-item">
                      <input type="radio" class="invest-amount-control" value="1000" name="amount" id="iv-amount-2">
                      <label class="invest-amount-label" for="iv-amount-2">$ 1000</label>
                    </div>
                    <div class="invest-amount-item">
                      <input type="radio" class="invest-amount-control" value="5000" name="amount" id="iv-amount-3">
                      <label class="invest-amount-label" for="iv-amount-3">$ 5000</label>
                    </div>
                    <div class="invest-amount-item">
                      <input type="radio" class="invest-amount-control" value="10000" name="amount" id="iv-amount-4">
                      <label class="invest-amount-label" for="iv-amount-4">$ 10,000</label>
                    </div>
                    <div class="invest-amount-item">
                      <input type="radio" class="invest-amount-control" value="15000" name="amount" id="iv-amount-5">
                      <label class="invest-amount-label" for="iv-amount-5">$ 15,000</label>
                    </div>
                    <div class="invest-amount-item">
                      <input type="radio" class="invest-amount-control" value="20000" name="amount" id="iv-amount-6">
                      <label class="invest-amount-label" for="iv-amount-6">$ 20,000</label>
                    </div>
                  </div>
                </div><!-- .invest-field -->
                <div class="invest-field form-group">
                  <div class="form-label-group">
                    <label class="form-label">Or Enter Your Amount</label>

                  </div>
                  <div class="form-control-group">
                    <div class="form-info">USD</div>
                    <input id="money" type="number" name="amount1"
                      class="form-control form-control-amount form-control-lg" placeholder="100.00">
                  </div>
                  <div class="form-note pt-2">Note: Minimum invest <%=plan.min%> USD and upto <%=plan.max%> USD</div>
                </div><!-- .invest-field -->
                <div class="invest-field form-group">
                  <div class="custom-control custom-control-xs custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="checkbox">
                    <label class="custom-control-label" for="checkbox">I agree the <a href="#">terms and &amp;
                        conditions.</a></label>
                  </div>
                </div><!-- .invest-field -->

              </div><!-- .col -->
              <div class="col-xl-4 col-lg-5 offset-xl-1">
                <div class="card card-bordered ml-lg-4 ml-xl-0">
                  <div class="nk-iv-wg4">
                    <div class="nk-iv-wg4-sub">
                      <h6 class="nk-iv-wg4-title title">Your Investment Details</h6>
                      <ul class="nk-iv-wg4-overview g-2">
                        <li>
                          <div class="sub-text">Name of scheme</div>
                          <div class="lead-text"><%=plan.name%></div>
                        </li>
                        <li>
                          <div class="sub-text">Term of the scheme</div>
                          <div class="lead-text"><span id="term"><%=plan.term%> </span>Months</div>
                        </li>
                        <li>
                          <div class="sub-text">Monthly profit</div>
                          <div class="lead-text">$ <span id="profit">0</span></div>
                        </li>
                        <li>
                          <div class="sub-text">Monthly profit %</div>
                          <div class="lead-text"><span id="interest"><%=plan.profit%></span>%</div>
                        </li>
                        <li>
                          <div class="sub-text">Total net profit</div>
                          <div class="lead-text">$ <span id="net-profit">0</span></div>
                        </li>
                        <li>
                          <div class="sub-text">Total Return</div>
                          <div class="lead-text">$ <span id="net-return">0</span></div>
                        </li>
                        <li>
                          <div class="sub-text">Term start at</div>
                          <div class="lead-text">Today (<%=plan.start%>)</div>
                        </li>
                        <li>
                          <div class="sub-text">Term end at</div>
                          <div class="lead-text"><%=plan.end%></div>
                        </li>
                      </ul>
                    </div><!-- .nk-iv-wg4-sub -->
                    <div class="nk-iv-wg4-sub">
                      <ul class="nk-iv-wg4-list">
                        <li>
                          <div class="sub-text">Amount to invest</div>
                          <div class="lead-text">$ <span id="to-invest">0.00</span></div>
                        </li>
                        <li>
                          <div class="sub-text">Conversion Fee <span>(0.5%)</span></div>
                          <div class="lead-text">$ <span id="fee">0</span></div>
                        </li>
                      </ul>
                    </div><!-- .nk-iv-wg4-sub -->
                    <div class="nk-iv-wg4-sub">
                      <ul class="nk-iv-wg4-list">
                        <li>
                          <div class="lead-text">Total Charge</div>
                          <div class="caption-text text-primary">$ <span id="total">0</span></div>
                        </li>
                      </ul>
                    </div><!-- .nk-iv-wg4-sub -->
                    <div class="nk-iv-wg4-sub text-center bg-lighter">
                      <a href="#" class="btn btn-lg btn-primary ttu" id="submit-btn" data-toggle="modal"
                        data-target="#invest-plan">Confirm
                        &amp; proceed</a>
                    </div><!-- .nk-iv-wg4-sub -->
                  </div><!-- .nk-iv-wg4 -->
                </div><!-- .card -->
              </div><!-- .col -->
            </div><!-- .row -->

            <div class="modal fade" tabindex="-1" id="invest-plan">
              <div class="modal-dialog modal-dialog-centered modal-md">
                <div class="modal-content">
                  <div class="modal-body modal-body-md text-center">
                    <div class="nk-modal">
                      <h4 class="nk-modal-title">Confirm Your Payment</h4>
                      <div class="nk-modal-text">
                        <p>To confirm your payment of <strong>
                            $<spam id="pay">0</spam>
                          </strong> on this order
                          using your
                          <strong>AceCoins Wallet</strong>. Please enter your Wallet Pin code in order complete the
                          payment or
                          cancel.</p>
                      </div>
                      <div class="nk-modal-form">
                        <div class="form-group">
                          <input type="password" name='pin' class="form-control form-control-password-big text-center">
                        </div>
                      </div>
                      <div class="nk-modal-action">
                        <button href="#" type="submit" class="btn btn-lg btn-mw btn-primary">Confirm Payment</button>
                        <div class="sub-text sub-text-alt mt-3 mb-4">This transaction will appear on your wallet
                          statement as Invest
                          <%=plan.name%>.</div>
                        <a href="/invest" class="link link-soft" data-dismiss="modal">Cancel and return</a>
                      </div>
                    </div>
                  </div><!-- .modal-body -->
                </div><!-- .modal-content -->
              </div><!-- .modla-dialog -->
            </div><!-- .modal -->
          </form>
        </div><!-- .nk-block -->
      </div>
    </div>
  </div>
</div>
<!-- content @e -->


<% include ../partials/invest-footer %>